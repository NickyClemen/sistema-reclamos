{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist",
    "target": "ES6",
    "paths": {
      "@cache": ["cache"],
      "@config": ["config"],
      "@debug": ["utils/debug"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes": ["routes/index.ts"],
      "@schemas": ["schemas"],
      "@static/*": ["static/*"],
      "@types": ["types"],
      "@utils": ["utils"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noImplicitThis": true,
    "removeComments": true,
    "types": ["node", "express"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}