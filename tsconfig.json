{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@cache": ["cache", "cache*"],
      "@config": ["config"],
      "@debug": ["utils/debug"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes": ["routes"],
      "@schemas": ["schemas"],
      "@static/*": ["static/*"],
      "@types": ["types"],
      "@utils": ["utils"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noImplicitThis": true,
    "removeComments": true,
    "types": ["node", "express", "debug"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}